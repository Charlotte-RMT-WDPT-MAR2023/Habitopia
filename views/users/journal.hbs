<section class="journal-container">
  <form id="journal-form" action="/journal" method="GET">
    <div class="entry">
      <div class="entry-date">June 19, 2023</div>
      <div >
        <textarea name="content" class="entry-content">{{ previousEntryContent }}</textarea>
      </div>
      <br>
      <button class="button" type="submit" id="edit-button">Edit</button>
    </div>
  </form>




<form action="/journal" method="POST">
  <div class="entry">
    <div class="entry-date" id="new-entry-date"></div>
    <div >
      <textarea name="content" placeholder="What do you want to write today?" class="entry-content"></textarea>
    </div>
    <br>
    <button class="button" type="submit">Save</button>
  </div>
</form>


  
</section>



<script src="/js/date.js"></script>
<script src="/js/journal.js"></script>
